class Solution {
    public String convertToBase7(int num) {
        if (num == 0) {
            return "0";
        }
        boolean negative = num < 0;
        num = Math.abs(num);
        StringBuilder res = new StringBuilder();

        while (num > 0) {
            res.insert(0, num % 7);
            num /= 7;
        }

        if (negative) {
            res.insert(0, '-');
        }

        return res.toString();
    }
}
