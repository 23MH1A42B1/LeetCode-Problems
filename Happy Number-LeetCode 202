import java.util.HashSet;
import java.util.Set;

class Solution {
    public boolean isHappy(int n) {
        Set<Integer> seen = new HashSet<>();
        
        while (n != 1) {
            if (seen.contains(n)) {
                return false;
            }
            seen.add(n);
            
            int newNum = 0;
            while (n > 0) {
                int digit = n % 10;
                newNum += digit * digit;
                n /= 10;
            }
            n = newNum;
        }
        
        return true;
    }
}
